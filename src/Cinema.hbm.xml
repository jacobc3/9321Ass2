<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="model.Cinema" table="cinemas">
		<meta attribute="class-description">
			This class contains the cinema detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<set name="amenities" cascade="save-update" table="cinemas_amenities">
			<key column="cinema_id"/>
			<many-to-many column="amenity_id" class="model.Amenity"/>
		</set>
		<property name="name" column="name" type="string" />
		<property name="location" column="location" type="string" />
		<property name="capacity" column="capacity" type="int" />
	</class>
	
	
</hibernate-mapping>